<!-- Search Modal -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title" id="searchModalLabel">
                    <i class="bi bi-search"></i> Search Posts
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-2">
                <form action="/neighborhood/search" method="GET" id="searchModalForm">
                    <div class="mb-3">
                        <div class="search-modal-input-wrapper">
                            <i class="bi bi-search search-modal-icon"></i>
                            <input
                                type="text"
                                name="q"
                                class="form-control search-modal-input"
                                placeholder="Search in <%= typeof neighborhood !== 'undefined' ? neighborhood.name : 'your neighborhood' %>..."
                                value="<%= typeof query !== 'undefined' ? query : '' %>"
                                autofocus
                            >
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
